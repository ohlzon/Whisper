<ul class="devicelist">
  <% @devices.each do |f| %>
    <li class="device" id="<%= f.id %>">
      <div class="deviceheader">
        <h1><a href="#" title="nil" class="devicetitle"><%= f.name %></a></h1>
        <p class="location"><%= f.location %></p>
      </div>
      <div class="deviceslideout">
        <div class="deviceoptions">
          <%= link_to "Learn", "#", :class => "button learn" %>
          <%= link_to "Delete", f, :method => :delete, :confirm => 'Are you sure?', :class => "button delete" %>
        </div>
      </div>
      <%= link_to 'On', "#", :class => "switch on", :id => f.id %>
      <%= link_to 'Off', "#", :class => "switch off", :id => f.id %>
    </li>
  <% end %>
</ul>
<div class="clear"></div>