<%= form_for([@device]) do |f| %>
  <div class="field">
    <%= f.label "Name" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Location" %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label "Type" %><br />
    <%= f.select("model", @devicetypes )%>
  </div>
  <div class="field">
    <%= f.label "Protocol" %><br />
    <%= f.select("protocol", @protocols ) %>
  </div>
  <div class="field">
    <%= f.hidden_field :house, :value => @housenumber %>
  </div>
  <div class="field">
    <%= f.label "Unit number" %><br />
  <!--  <%= f.select("unit", Unit::UNITS) %> -->
    <%= f.hidden_field :unit, :value => @unitnumber %>
  </div>
  <div class="field">
    <%= f.submit %>
  </div>
<% end %>