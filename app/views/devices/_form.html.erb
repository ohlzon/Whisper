<ul class="boxlist">
  <li class="box">  
    <div class="boxheader">
      <h1>New Device</h1>
    </div>
    <div id="form">
      <%= form_for([@device]) do |f| %>
        <div class="field">
          <%= f.label "Name" %><br />
          <%= f.text_field :name %>
        </div>
        <div class="field">
          <%= f.label "Location" %><br />
          <%= f.text_field :location %>
        </div>
        <div class="field">
          <%= f.label "Manufacturers" %><br />
          <%= f.select("manufacturer", @manufacturers )%>
        </div>
        <div class="field">
          <%= f.label "Type" %><br />
          <%= f.select("model", @devicetypes )%>
        </div>
        <div class="field">
          <%= f.label "Protocol" %><br />
          <%= f.select("protocol", @protocols ) %>
        </div>
        <div class="field">
          <%= f.hidden_field :house, :value => @housenumber %>
        </div>
        <div class="field">
          <%= f.hidden_field :unit, :value => @unitnumber %>
        </div>
        <div class="field">
          <%= f.label "House number" %><br />
          <%= f.text_field :house, :disabled => true %>
        </div>  
        <div class="field">
          <%= f.label "Unit number" %><br />
          <%= f.text_field :unit, :disabled => true %>
        </div>
        <div class="field">
          <%= f.submit %>
        </div>
      <% end %>
    </<div>
  </li>  
</ul>